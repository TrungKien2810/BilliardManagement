<UserControl x:Class="Billiards.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Dashboard - Tổng quan" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Statistics Cards -->
        <UniformGrid Grid.Row="1" 
                     Columns="4" 
                     Margin="0,0,0,20">
            <!-- Doanh thu hôm nay -->
            <Border Background="#4CAF50" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Doanh thu hôm nay" 
                               Foreground="White" 
                               FontSize="14" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTodayRevenue" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Doanh thu tháng này -->
            <Border Background="#2196F3" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Doanh thu tháng này" 
                               Foreground="White" 
                               FontSize="14" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtMonthRevenue" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Bàn đang sử dụng -->
            <Border Background="#FF9800" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Bàn đang sử dụng" 
                               Foreground="White" 
                               FontSize="14" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtInUseTables" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtTotalTables" 
                               Text="/ 0" 
                               Foreground="White" 
                               FontSize="16" 
                               Opacity="0.8" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Đơn hàng hôm nay -->
            <Border Background="#9C27B0" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Đơn hàng hôm nay" 
                               Foreground="White" 
                               FontSize="14" 
                               Opacity="0.9"/>
                    <TextBlock x:Name="txtTodayInvoices" 
                               Text="0" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,5,0,0"/>
                    <TextBlock x:Name="txtActiveInvoices" 
                               Text="0 đang active" 
                               Foreground="White" 
                               FontSize="14" 
                               Opacity="0.8" 
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Charts and Tables -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Daily Revenue Chart (Table) -->
            <Border Grid.Column="0" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,0,10,0"
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Doanh thu theo ngày (tháng này)" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgDailyRevenue" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ngày" 
                                                Binding="{Binding Date, StringFormat=\{0:dd/MM/yyyy\}}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Doanh thu" 
                                                Binding="{Binding Revenue, StringFormat=\{0:N0\} VNĐ}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Số đơn" 
                                                Binding="{Binding InvoiceCount}" 
                                                Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Top Products -->
            <Border Grid.Column="1" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15" 
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Top sản phẩm hôm nay" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgTopProducts" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sản phẩm" 
                                                Binding="{Binding ProductName}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="SL" 
                                                Binding="{Binding TotalQuantity}" 
                                                Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

