<UserControl x:Class="Billiards.UI.Views.TableManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="10">
        <TabControl>
            <!-- Tab 1: Tables -->
            <TabItem Header="Quản lý Bàn">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Danh sách Bàn" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="dgTables" 
                                  AutoGenerateColumns="False"
                                  SelectionChanged="dgTables_SelectionChanged"
                                  IsReadOnly="True"
                                  Height="550">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                                <DataGridTextColumn Header="Tên bàn" Binding="{Binding TableName}" Width="*"/>
                                <DataGridTextColumn Header="Khu vực" Binding="{Binding Area.AreaName}" Width="150"/>
                                <DataGridTextColumn Header="Loại bàn" Binding="{Binding TableType.TypeName}" Width="150"/>
                                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Thông tin Bàn" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock Text="Tên bàn:" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtTableName" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                <TextBlock Text="Khu vực:" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbArea" 
                                          DisplayMemberPath="AreaName" 
                                          SelectedValuePath="ID"
                                          Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                <TextBlock Text="Loại bàn:" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbTableType" 
                                          DisplayMemberPath="TypeName" 
                                          SelectedValuePath="ID"
                                          Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                                <TextBlock Text="Trạng thái:" Margin="0,0,0,5"/>
                                <ComboBox x:Name="cmbStatus" Height="30">
                                    <ComboBoxItem Content="Free" Tag="Free"/>
                                    <ComboBoxItem Content="InUse" Tag="InUse"/>
                                    <ComboBoxItem Content="Reserved" Tag="Reserved"/>
                                    <ComboBoxItem Content="Maintenance" Tag="Maintenance"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddNewTable" Content="Thêm mới" Width="110" Height="38" Margin="5,0" Click="btnAddNewTable_Click" FontSize="14"/>
                                <Button x:Name="btnSaveTable" Content="Lưu" Width="110" Height="38" Margin="5,0" Click="btnSaveTable_Click" FontSize="14"/>
                                <Button x:Name="btnDeleteTable" Content="Xóa" Width="110" Height="38" Margin="5,0" Click="btnDeleteTable_Click" Style="{StaticResource DangerButton}" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2: Areas -->
            <TabItem Header="Quản lý Khu vực">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Danh sách Khu vực" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="dgAreas" 
                                  AutoGenerateColumns="False"
                                  SelectionChanged="dgAreas_SelectionChanged"
                                  IsReadOnly="True"
                                  Height="550">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="100"/>
                                <DataGridTextColumn Header="Tên khu vực" Binding="{Binding AreaName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Thông tin Khu vực" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Tên khu vực:" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtAreaName" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddNewArea" Content="Thêm mới" Width="110" Height="38" Margin="5,0" Click="btnAddNewArea_Click" FontSize="14"/>
                                <Button x:Name="btnSaveArea" Content="Lưu" Width="110" Height="38" Margin="5,0" Click="btnSaveArea_Click" FontSize="14"/>
                                <Button x:Name="btnDeleteArea" Content="Xóa" Width="110" Height="38" Margin="5,0" Click="btnDeleteArea_Click" Style="{StaticResource DangerButton}" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 3: TableTypes -->
            <TabItem Header="Quản lý Loại bàn">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="350"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Danh sách Loại bàn" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="dgTableTypes" 
                                  AutoGenerateColumns="False"
                                  SelectionChanged="dgTableTypes_SelectionChanged"
                                  IsReadOnly="True"
                                  Height="550">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="100"/>
                                <DataGridTextColumn Header="Tên loại bàn" Binding="{Binding TypeName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Thông tin Loại bàn" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryColor}"
                                   Margin="0,0,0,15"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Tên loại bàn:" Margin="0,0,0,5"/>
                                <TextBox x:Name="txtTableTypeName" Height="30"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="btnAddNewTableType" Content="Thêm mới" Width="110" Height="38" Margin="5,0" Click="btnAddNewTableType_Click" FontSize="14"/>
                                <Button x:Name="btnSaveTableType" Content="Lưu" Width="110" Height="38" Margin="5,0" Click="btnSaveTableType_Click" FontSize="14"/>
                                <Button x:Name="btnDeleteTableType" Content="Xóa" Width="110" Height="38" Margin="5,0" Click="btnDeleteTableType_Click" Style="{StaticResource DangerButton}" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>



