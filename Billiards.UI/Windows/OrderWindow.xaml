<Window x:Class="Billiards.UI.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Billiards.UI.Windows"
        mc:Ignorable="d"
        Title="Đặt hàng" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 1: Danh mục sản phẩm -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Danh mục" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="lbCategories" 
                     SelectionChanged="lbCategories_SelectionChanged"
                     DisplayMemberPath="CategoryName"
                     SelectedValuePath="ID"/>
        </StackPanel>

        <!-- Cột 2: Sản phẩm -->
        <StackPanel Grid.Column="1" Margin="0,0,10,0">
            <TextBlock Text="Sản phẩm" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="icProducts">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding ProductName}" 
                                    Width="120" 
                                    Height="80" 
                                    Margin="5"
                                    Click="Product_Click"
                                    Tag="{Binding}">
                                <Button.ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductName}" FontWeight="Bold"/>
                                        <TextBlock>
                                            <Run Text="Giá: "/>
                                            <Run Text="{Binding SalePrice, StringFormat='{}{0:N0} VNĐ'}"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="Tồn kho: "/>
                                            <Run Text="{Binding StockQuantity}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Button.ToolTip>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

        <!-- Cột 3: Giỏ hàng -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="Giỏ hàng" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgCart" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="50"/>
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat='{}{0:N0}'}" Width="80"/>
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding Total, StringFormat='{}{0:N0}'}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="btnConfirm" 
                        Content="Xác nhận Order" 
                        Width="120" 
                        Height="35" 
                        Margin="5,0"
                        Click="btnConfirm_Click"/>
                <Button Content="Hủy" 
                        Width="80" 
                        Height="35" 
                        Margin="5,0"
                        Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
