<Window x:Class="Billiards.UI.Windows.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Billiards.UI.Windows"
        mc:Ignorable="d"
        Title="Thanh toán" Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Thông tin thời gian -->
        <GroupBox Grid.Row="0" Header="Thông tin thời gian" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Giờ vào:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtStartTime" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Giờ ra:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtEndTime" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Tổng thời gian:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalTime" Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Tiền giờ -->
        <GroupBox Grid.Row="1" Header="Tiền giờ" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="txtTableFee" FontSize="16" FontWeight="Bold" Foreground="Blue"/>
            </StackPanel>
        </GroupBox>

        <!-- Danh sách sản phẩm -->
        <GroupBox Grid.Row="2" Header="Danh sách sản phẩm" Margin="0,0,0,10">
            <DataGrid x:Name="dgProducts" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Product.ProductName}" Width="*"/>
                    <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="50"/>
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice, StringFormat='{}{0:N0}'}" Width="100"/>
                    <DataGridTextColumn Header="Thành tiền" Binding="{Binding Total, StringFormat='{}{0:N0}'}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Tổng tiền dịch vụ -->
        <GroupBox Grid.Row="3" Header="Tổng tiền dịch vụ" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="txtProductFee" FontSize="16" FontWeight="Bold" Foreground="Blue"/>
            </StackPanel>
        </GroupBox>

        <!-- Tổng cộng -->
        <GroupBox Grid.Row="4" Header="Tổng cộng" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="txtSubTotal" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>

        <!-- Giảm giá và Khách hàng -->
        <GroupBox Grid.Row="5" Header="Giảm giá &amp; Khách hàng" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Giảm giá (VNĐ):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDiscount" 
                             Text="0" 
                             TextChanged="txtDiscount_TextChanged"
                             LostFocus="txtDiscount_LostFocus"
                             PreviewTextInput="txtDiscount_PreviewTextInput"
                             PreviewKeyDown="txtDiscount_PreviewKeyDown"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="Số điện thoại khách hàng:" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtCustomerPhone" TextChanged="txtCustomerPhone_TextChanged"/>
                    <TextBlock x:Name="txtCustomerName" Margin="0,5,0,0" Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Tổng thanh toán -->
        <GroupBox Grid.Row="6" Header="TỔNG THANH TOÁN" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock x:Name="txtTotalAmount" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="Red"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Nút hành động -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCheckout" 
                    Content="Xác nhận &amp; In Hóa đơn" 
                    Width="180" 
                    Height="40" 
                    FontSize="14"
                    FontWeight="Bold"
                    Margin="5,0"
                    Click="btnCheckout_Click"/>
            <Button Content="Hủy" 
                    Width="100" 
                    Height="40" 
                    Margin="5,0"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
