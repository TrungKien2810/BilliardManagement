<Window x:Class="Billiards.UI.Windows.InvoiceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Đơn hàng" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Chi tiết Đơn hàng" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Invoice Info -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15"
                Background="#F9F9F9">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtInvoiceId" Grid.Row="0" Grid.Column="1" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Bàn:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtTable" Grid.Row="0" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Bắt đầu:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtStartTime" Grid.Row="1" Grid.Column="1" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="Kết thúc:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtEndTime" Grid.Row="1" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Nhân viên:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtEmployee" Grid.Row="2" Grid.Column="1" Margin="0,0,20,5"/>

                <TextBlock Grid.Row="2" Grid.Column="2" Text="Khách hàng:" FontWeight="Bold" Margin="0,0,10,5"/>
                <TextBlock x:Name="txtCustomer" Grid.Row="2" Grid.Column="3" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Trạng thái:" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtStatus" Grid.Row="3" Grid.Column="1" Margin="0,0,20,0" FontWeight="Bold"/>
            </Grid>
        </Border>

        <!-- Invoice Details -->
        <Border Grid.Row="2" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Chi tiết sản phẩm" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                <DataGrid x:Name="dgInvoiceDetails" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          AlternatingRowBackground="#F5F5F5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sản phẩm" 
                                            Binding="{Binding Product.ProductName}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Số lượng" 
                                            Binding="{Binding Quantity}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Đơn giá" 
                                            Binding="{Binding UnitPrice, StringFormat=\{0:N0\} VNĐ}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Thành tiền" 
                                            Binding="{Binding Total, StringFormat=\{0:N0\} VNĐ}" 
                                            Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="3" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15"
                Background="#E3F2FD">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Tổng tiền giờ:" Margin="0,0,0,5"/>
                    <TextBlock Text="Tổng tiền dịch vụ:" Margin="0,0,0,5"/>
                    <TextBlock Text="Giảm giá:" Margin="0,0,0,5"/>
                    <TextBlock Text="Tổng thanh toán:" FontWeight="Bold" FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtTableFee" 
                               Text="0 VNĐ" 
                               Margin="0,0,0,5" 
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="txtProductFee" 
                               Text="0 VNĐ" 
                               Margin="0,0,0,5" 
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="txtDiscount" 
                               Text="0 VNĐ" 
                               Margin="0,0,0,5" 
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="txtTotalAmount" 
                               Text="0 VNĐ" 
                               FontWeight="Bold" 
                               FontSize="16" 
                               Foreground="#2196F3"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="4" 
                Content="Đóng" 
                Click="btnClose_Click" 
                Padding="20,5" 
                HorizontalAlignment="Right" 
                Width="100"/>
    </Grid>
</Window>

